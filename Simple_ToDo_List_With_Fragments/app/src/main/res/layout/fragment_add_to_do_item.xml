<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/add_item_background"
    tools:context="com.clara.simple_todo_list_with_fragments.AddToDoItemFragment">

    <Button
        android:id="@+id/add_todo_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/submit"
        app:layout_constraintBottom_toBottomOf="@+id/urgent_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/urgent_checkbox"
        app:layout_constraintTop_toTopOf="@+id/urgent_checkbox" />

    <CheckBox
        android:id="@+id/urgent_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="19dp"
        android:checked="false"
        android:text="@string/urgent"
        app:layout_constraintEnd_toStartOf="@+id/add_todo_item_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_todo_item_edittext" />

    <EditText
        android:id="@+id/new_todo_item_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/instructions"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>




